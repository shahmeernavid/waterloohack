<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#232525"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp" >

    <ImageView
        android:id="@+id/content_type"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/message" />

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_type"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/textfield"
        android:ems="10"
        android:hint="Sling title"
        android:padding="5dp">
        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/expiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:entries="@array/expiration_array"
        android:textColor="#eeeeee"
        android:background="@drawable/textfield"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expiration"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="password (optional)"
        android:inputType="textPassword"
        android:background="@drawable/textfieldtransparent"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="question (optional)"
        android:background="@drawable/textfieldtransparent"
        android:padding="5dp"/>

    <Button
        android:id="@+id/plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/submitslingbutton"
        android:text="sling"
        android:textColor="#ffffff" />

</RelativeLayout>
